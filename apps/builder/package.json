{
  "name": "builder",
  "version": "1.0.0",
  "main": "dist-client/main/index.js",
  "license": "MIT",
  "scripts": {
    "copy-client": "rm -rf dist-client && cp -R ../client/dist dist-client",
    "copy-web": "rm -rf dist-web && cp -R ../web/dist dist-web",
    "copy": "yarn copy-client && yarn copy-web",
    "clear": "rm -rf dist",
    "build": "yarn copy && yarn clear && electron-builder"
  },
  "build": {
    "appId": "your.id",
    "files": {
      "filter": [
        "./dist-client/**/*",
        "./dist-web/**/*"
      ]
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "electronVersion": "23.1.3"
  },
  "devDependencies": {
    "electron-builder": "23.6.0"
  }
}
